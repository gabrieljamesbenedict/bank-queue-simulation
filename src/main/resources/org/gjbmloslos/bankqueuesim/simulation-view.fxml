<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<SplitPane dividerPositions="0.3" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gjbmloslos.bankqueuesim.SimulationController">
   <items>
      <VBox prefHeight="398.0" prefWidth="247.0" spacing="15.0" style="-fx-background-color: lightgray;" SplitPane.resizableWithParent="false">
         <children>
            <VBox spacing="2.0">
               <children>
                  <Text fx:id="simulationStatus" strokeType="OUTSIDE" strokeWidth="0.0" text="Simulation Ready" />
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Max Sim Time:" />
                        <Text fx:id="textMaxSimTime" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Elapsed Sim Time:" />
                        <Text fx:id="textElapsedSimTime" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sim Speed" />
                        <Text fx:id="textSimulationSpeed" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox spacing="2.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Settings" />
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Teller Amount:" />
                        <Text fx:id="textTellerAmount" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Queue Amount:" />
                        <Text fx:id="textQueueAmount" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Strict Exclusivity:" />
                        <Text fx:id="textStrictExclusivity" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Interval Mode:" />
                        <Text fx:id="textIntervalMode" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Interval Time:" />
                        <Text fx:id="textIntervalTime" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bank Services" />
                  <ListView fx:id="lvBankService" prefHeight="150.0" />
               </children>
            </VBox>
            <HBox spacing="2.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#begin" text="Begin" />
                  <Button mnemonicParsing="false" text="Pause" />
                  <Button mnemonicParsing="false" onAction="#end" text="End" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
      <AnchorPane>
         <children>
            <ScrollPane fx:id="sp" fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox fx:id="tellerRow" spacing="10.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <HBox fx:id="queueRow" prefWidth="375.0" spacing="10.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </content>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ScrollPane>
         </children>
      </AnchorPane>
   </items>
</SplitPane>
